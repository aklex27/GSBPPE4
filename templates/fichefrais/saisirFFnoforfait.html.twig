{% endblock %}

{% block body %}
   
<a href="/accueil"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>


<h3><center>Formulaire <b>Fiche Frais</b> hors forfait</center></h3>

<center>
<div class="container">
  <div class="well">
    <div class="bg-light">
      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

      {# Les erreurs gÃ©nÃ©rales du formulaire. #}
      {{ form_errors(form) }}

        <div class="form-group">
          {{ form_label(form.libelle, "LibellÃ© :", {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.libelle) }}
          <div class="col-sm-4">
            {{ form_widget(form.libelle) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.date, "Date :", {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.date) }}
          <div class="col-sm-4">
            {{ form_widget(form.date) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.montant, "Montant (â‚¬) :", {'label_attr': {'class': 'control-label'}}) }}
