{% extends "base.html.twig" %}

{% block title %}
    Formulaire Ajout Visiteur
{% endblock %}

{% block body %}
<h2><center>CAS GSB</center></h2>
<h3><center>Gestion de fiches de frais</center></h3>
<h4><center>Formulaire Visiteur</center></h4 >
<center>
<div class="container">
<div class="well">
<div class="bg-light">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}
        <div class="form-group">
      {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.nom) }}
      <div class="col-sm-4">
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
<div class="form-group">
      {{ form_label(form.prenom, "Prenom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.prenom) }}
      <div class="col-sm-4">
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
 <div class="form-group">
      {{ form_label(form.adresse, "Adresse", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.adresse) }}
      <div class="col-sm-4">
        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
       <div class="form-group">
      {{ form_label(form.ville, "Ville", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.ville) }}
      <div class="col-sm-4">
        {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>    
     
      
        <div class="form-group">
      {{ form_label(form.cp, "cp", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.cp) }}
      <div class="col-sm-4">
        {{ form_widget(form.cp, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>    
     
       <div class="form-group">
      {{ form_label(form.dateEmbauche, "dateEmbauche", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.dateEmbauche) }}
      <div class="col-sm-4">
        {{ form_widget(form.dateEmbauche, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>    
     
  
       <div class="form-group">
      {{ form_label(form.login, "Login", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.login) }}
      <div class="col-sm-4">
        {{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

       <div class="form-group">
      {{ form_label(form.mdp, "Mdp", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.mdp) }}
      <div class="col-sm-4">
        {{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>


        <div class="row">
        <label class="col-md-4 control-label"></label>
             <div class="col-sm-4 col-md-offset-2">
                {{ form_widget(form.valider, {'attr': {'class': 'col-md-4 btn btn-primary'}}) }}
                {{ form_widget(form.annuler, {'attr': {'class': 'col-md-4 btn btn-primary'}}) }}
            </div>
        </div> <br>
</div>
</div>
</div>
</center>
{% if app.session.flashBag.has('success') %}
 <div class="alert alert-success">
  {% for msg in app.session.flashBag.get('success') %}
     {{ msg }}
  {% endfor %}
 </div>
{% endif %}

{{ form_rest(form) }}

{# Fermeture de la balise <form> du formulaire HTML #}
{{ form_end(form) }}
 
